<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="PrimaryText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="SecondaryText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:background">@drawable/touch_selector</item>
    </style>

    <style name="AboutLabel" parent="@style/SecondaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/about_paragraph_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/about_paragraph_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/about_paragraph_horizontal_margin</item>
    </style>

    <style name="BusLabel">
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="BusValue">
        <item name="android:layout_weight">2</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">left</item>
        <item name="android:text">-</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

</resources>
